extends ../layout/layout

block header 
   include ../components/header
block content 

  section.config#config 
    div.config-container
      i(class="fa-solid fa-gear")

    article.config-options.hidden    
      div.update-banner.box
        i(class="fa-regular fa-image update-banner")
        h3 Actualizar Banner
        i(class="fa-solid fa-arrow-up-from-bracket arrow update-banner")

      div.update-link.box
       i(class="fa-regular fa-file-excel ")
       h3 Carga masiva
       i(class="fa-solid fa-arrow-up-from-bracket arrow update-link-icon")

      div.box.download
        i(class="fa-regular fa-file-excel  download")
        h3 Descargar plantilla
        i(class="fa-solid fa-download download")
      div.box.updateUser
        i(class="fa-solid fa-users  updateUser")
        h3 Editar usuarios
        i(class="fa-solid fa-pen-to-square updateUser")
      div.box.createUser
        i(class="fa-solid fa-users  updateUser")
        h3 Crear Usuario
        i(class="bi bi-person-plus-fill")
        

  article.banner 
   a.link-banner(href="https://www.aerocivil.gov.co/" target="_blank")  
     img(src="../assets/banner/banner.webp", alt="Banner Aerocivil" id="banner")

  h2 Opciones 
  
  section.options-container 
    article(class="option option-graphic graphic")
      span.graphic 
        i(class="fa-solid fa-chart-line graphic")
      div.glas-div.graphic
        h3.graphic Carga Masiva
        p.graphic Aca podras realizar una carga masiva de datos desde una plantilla de Excel.


    article(class="option option-base base")
      span.base 
        i(class="fa-solid fa-database base")
      div.glas-div.base
        h3.base Expedientes
        p.base Aca podras ver la base de datos y gestionarla (agregar, editar o eliminar los expedientes)


  include ../components/formUpdateBanner
  include ../components/loadExcel
  include ../components/modallInfo
  include ../components/createUser
  include ../components/usersAdmin
  include ../components/updateUser

block link-js 
  script(src="../js/script.js", type="module")
